= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :image_path
    %div
      = image_tag @item.image_path.url, size: "160x160"
    = f.file_field :image_path
  .actions
    = f.submit 'Save'
