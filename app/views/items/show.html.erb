<h1>Items#show</h1>
<table>
  <tr>
    <td>Name</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>Price</td>
    <td><%= @item.price.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @item.description %></td>
  </tr>
</table>
<td><%= link_to 'Return', '/' %></td>
<%= button_to 'BID!!', { controller: 'items', action: 'bid'}, { params: { id: @item.id} } %>
